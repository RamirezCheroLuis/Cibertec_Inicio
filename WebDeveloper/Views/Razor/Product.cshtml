@model IEnumerable<WebDeveloper.Model.Product>
@using WebDeveloper.Helpers
@{
    ViewBag.Title = "Product";
     
}
@helper DisplayPriceRazor(double price) {
    if (price == 0)
    {
        <span>Free!!!</span>
    }
    else
    {
        <span>@price</span>
    }

}
<h2>@ViewBag.Title</h2>
<br />
<ul>
    @foreach (var product in Model)
    {
        <li>
            <span>@product.Description</span>
            @*@DisplayPriceRazor(product.Price)*@
            <div>
                @*@CustomHelper.DisplayPriceStatic(product.Price)*@
            </div>

            <div>
               @Html.DisplayPriceExtension(product.Price)
               
            </div>
            <div>
                @Html.DisplayDateOrNull(product.ManufacturingDate)
            </div>
        </li>
       
    }
</ul>